    private static void demonstrateErrorHandling(NotificationPlatform platform) {
        // Create bad request with validation errors
        NotificationRequest badRequest = new NotificationRequest(
            "learning_assignment",
            Arrays.asList("jane.smith@jpmc.com")
        );
        
        // Add mobile payload that violates schema limits
        badRequest.addPlatformPayload("mobile.jpmc.learninghub", Map.of(
            "title", "This title is way too long for mobile notifications and will be rejected",
            "body", "This body text is also much too long for mobile and exceeds the 20 character limit",
            "action_url", "learninghub://course/advanced-cybersecurity-101"
        ));
        
        System.out.println("ğŸ§ª TESTING VALIDATION ERROR HANDLING:");
        System.out.println("   â”œâ”€â”€ Sending message with title=87 chars (limit=25)");
        System.out.println("   â”œâ”€â”€ Sending message with body=82 chars (limit=20)");
        System.out.println("   â””â”€â”€ Platform should reject and provide helpful errors");
        
        NotificationResult badResult = platform.processNotification(badRequest);
        System.out.println(badResult);
        
        System.out.println("âœ… ERROR HANDLING BENEFITS:");
        System.out.println("   â”œâ”€â”€ Prevents poor user experiences (truncated messages)");
        System.out.println("   â”œâ”€â”€ Gives developers clear feedback on what to fix");
        System.out.println("   â”œâ”€â”€ Maintains platform quality and user trust");
        System.out.println("   â””â”€â”€ Forces deliberate, platform-appropriate content design");
    }
