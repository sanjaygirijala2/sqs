  ('ios.jpmc.myworkspace', 'meeting_reminder', true, NOW());

-- 3. Create plugin assignment
UPDATE routes SET plugin_id = 'mobile_plugin' 
WHERE route_id = 'ios.jpmc.myworkspace';
