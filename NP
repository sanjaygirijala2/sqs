2. Updated capabilities Collection (Base Schema)
json
{
  "_id": ObjectId("..."),
  "capability_name": "book_a_seat",
  "display_name": "Workspace Booking",
  "description": "Notifications for workspace and meeting room bookings",
  "version": "1.2.0",
  "status": "active",
  "base_schema": {
    "core_fields": {
      "title": {
        "type": "string",
        "description": "Main notification heading",
        "required": true,
        "base_validation": {
          "min_length": 1,
          "max_length": 100
        }
      },
      "body": {
        "type": "string",
        "description": "Main notification content", 
        "required": true,
        "base_validation": {
          "min_length": 1,
          "max_length": 500
        }
      }
    },
    "extended_fields": {
      "header": {
        "type": "string",
        "description": "Optional header text",
        "required": false,
        "base_validation": {
          "max_length": 50
        }
      },
      "footer": {
        "type": "string", 
        "description": "Optional footer text",
        "required": false,
        "base_validation": {
          "max_length": 100
        }
      },
      "action_url": {
        "type": "string",
        "description": "Deep link URL",
        "required": false
      },
      "image_url": {
        "type": "string",
        "description": "Notification image",
        "required": false
      }
    }
