java
    private static void demoValidationErrors(NotificationPlatform platform) {
        System.out.println("ğŸš¨ Testing validation errors with bad payloads...");
        
        // Create request with validation errors
        NotificationRequest badRequest = new NotificationRequest("book_a_seat", "myworkspace");
        badRequest.addRecipient("jane.smith@jpmc.com");
        
        // Mobile payload with violations
        NotificationPayload badMobilePayload = new NotificationPayload("mobile.myworkspace");
        badMobilePayload.addField("title", "Your Workspace Reservation Has Been Successfully Confirmed"); // 60 chars - too long!
        badMobilePayload.addField("body", "Desk 42A on Floor 3 has been reserved for you tomorrow"); // 54 chars - too long!
        badMobilePayload.addField("action_url", "myworkspace://booking/67890");
        
        // Desktop payload missing required field
        NotificationPayload badDesktopPayload = new NotificationPayload("desktop.myworkspace");
        badDesktopPayload.addField("header", "JPMC Workspace");
        // Missing required 'title' field!
        badDesktopPayload.addField("body", "Your desk reservation details...");
        
        badRequest.addPayload(badMobilePayload);
        badRequest.addPayload(badDesktopPayload);
        
        System.out.println("\nğŸ“¨ Bad Request: " + badRequest);
        System.out.println("ğŸ“± Bad Mobile Payload (title: 60 chars, body: 54 chars)");
        System.out.println("ğŸ’» Bad Desktop Payload (missing required title field)");
        
        // Process bad request
        ProcessingResult result = platform.processNotification(badRequest);
        
        System.out.println("\nğŸš¨ VALIDATION ERROR RESULTS:");
        System.out.println("Overall Success: " + (result.isSuccessful() ? "âœ…" : "âŒ"));
        
        System.out.println("\nDelivery Log:");
        result.getDeliveryLog().forEach(log -> System.out.println("  " + log));
        
        System.out.println("\nDetailed Validation Errors:");
        result.getRouteResults().forEach((route, validation) -> {
            System.out.println("  ğŸ“ " + route + ": " + validation);
            if (!validation.isValid()) {
                validation.getErrors().forEach(error -> System.out.println("    âŒ " + error));
            }
        });
        
        System.out.println("\nâœ… ERROR HANDLING BENEFITS:");
        System.out.println("  â”œâ”€â”€ Users protected from truncated/poor experiences");
        System.out.println("  â”œâ”€â”€ Developers get specific, actionable error messages");
        System.out.println("  â”œâ”€â”€ Platform quality maintained automatically");
        System.out.println("  â””â”€â”€ Forces platform-appropriate content design");
        
        System.out.println("\nğŸ”§ HOW TO FIX:");
        System.out.println("  Mobile: Shorten title to â‰¤25 chars, body to â‰¤20 chars");
        System.out.println("  Desktop: Add required 'title' field");
    }
    
    private static void demoRelationshipQueries(NotificationPlatform platform) {
        System.out.println("ğŸ” Exploring platform relationships and data model...");
        
        System.out.println("\nğŸ“Š CAPABILITY â†’ ROUTE â†’ SCHEMA â†’ NAMESPACE RELATIONSHIPS:");
        
        for (Capability capability : platform.getCapabilities().values()) {
            System.out.println("\nğŸ¯ CAPABILITY: " + capability.getName());
            System.out.println("â”œâ”€â”€ Purpose: " + capability.getBusinessPurpose());
            System.out.println("â”œâ”€â”€ Success Metrics: " + capability.getSuccessMetrics());
            System.out.println("â””â”€â”€ Supported Routes:");
            
            for (String routeId : capability.getSupportedRoutes()) {
                Route route = platform.getRoutes().get(routeId);
                if (route != null) {
                    MessageSchema schema = platform.getSchemas().get(route.getSchemaId());
                    Namespace namespace = platform.getNamespaces().get(route.getNamespaceId());
                    
                    System.out.println("    â”œâ”€â”€ ğŸ“ " + route.getId() + " (" + route.getPlatform() + ")");
                    System.out.println("    â”‚   â”œâ”€â”€ Schema: " + (schema != null ? schema.getId() + " v" + schema.getVersion() : "Unknown"));
                    System.out.println("    â”‚   â”œâ”€â”€ Namespace: " + (namespace != null ? namespace.getId() : "Unknown"));
                    System.out.println("    â”‚   â”œâ”€â”€ Owner Team: " + (namespace != null ? namespace.getOwnerTeam() : "Unknown"));
                    
                    if (schema != null && !schema.getFields().isEmpty()) {
                        System.out.println("    â”‚   â””â”€â”€ Fields: " + schema.getFields().size() + " defined");
                        schema.getFields().values().forEach(field -> 
                            System.out.println("    â”‚       â”œâ”€â”€ " + field));
                    }
                }
            }
        }
        
        System.out.println("\nğŸ—ï¸ NAMESPACE OWNERSHIP & GOVERNANCE:");
        platform.getNamespaces().values().forEach(namespace -> {
            System.out.println("\nğŸ“‹ " + namespace.getId() + " (" + namespace.getPlatform() + ")");
            System.out.println("â”œâ”€â”€ Owner: " + namespace.getOwnerTeam());
            System.out.println("â”œâ”€â”€ Governance Rules: " + namespace.getGovernance());
            
            // Find routes using this namespace
            long routeCount = platform.getRoutes().values().stream()
                .filter(route -> route.getNamespaceId().equals(namespace.getId()))
                .count();
            System.out.println("â””â”€â”€ Used by " + routeCount + " routes");
        });
        
        System.out.println("\nğŸ“± APPLICATION INTEGRATION SUMMARY:");
        platform.getRoutes().values().stream()
            .collect(Collectors.groupingBy(Route::getApplicationId))
            .forEach((appId, routes) -> {
                System.out.println("\nğŸ“± Application: " + appId);
                System.out.println("â”œâ”€â”€ Total Routes: " + routes.size());
                System.out.println("â”œâ”€â”€ Platforms: " + routes.stream()
                    .map(Route::getPlatform).distinct().collect(Collectors.joining(", ")));
                System.out.println("â””â”€â”€ Route Details:");
                routes.forEach(route -> 
                    System.out.println("    â”œâ”€â”€ " + route.getPlatform() + " â†’ " + route.getSchemaId()));
            });
        
        System.out.println("\nğŸ”— SCHEMA REUSE ANALYSIS:");
        platform.getSchemas().values().stream()
            .collect(Collectors.groupingBy(MessageSchema::getId))
            .forEach((schemaId, schemaList) -> {
                MessageSchema schema = schemaList.get(0);
                long routeCount = platform.getRoutes().values().stream()
                    .filter(route -> route.getSchemaId().equals(schemaId))
                    .count();
                
                System.out.println("\nğŸ“‹ " + schemaId + " (v" + schema.getVersion() + ")");
                System.out.println("â”œâ”€â”€ Used by: " + routeCount + " routes");
                System.out.println("â”œâ”€â”€ Field Count: " + schema.getFields().size());
                System.out.println("â””â”€â”€ Namespace: " + schema.getNamespaceId());
            });
        
        // Demonstrate cross-platform capability
        System.out.println("\nğŸŒ CROSS-PLATFORM CAPABILITY ANALYSIS:");
        platform.getCapabilities().values().forEach(capability -> {
            Set<String> platforms = capability.getSupportedRoutes().stream()
                .map(routeId -> platform.getRoutes().get(routeId))
                .filter(Objects::nonNull)
                .map(Route::getPlatform)
                .collect(Collectors.toSet());
            
            System.out.println("ğŸ¯ " + capability.getName() + ": " + platforms.size() + " platforms");
            System.out.println("â”œâ”€â”€ Platforms: " + String.join(", ", platforms));
            System.out.println("â””â”€â”€ Business Value: Consistent " + capability.getBusinessPurpose().toLowerCase() + " across all user devices");
        });
    }
}
