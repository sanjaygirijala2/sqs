  "metrics": {
    "total_notifications": 5000,
    "successful_deliveries": 4850,
    "failed_deliveries": 150,
    "delivery_rate": 97.0,
    "average_delivery_time_ms": 1200,
    "engagement": {
      "opened": 3500,
      "clicked": 1200,
      "open_rate": 72.2,
      "click_rate": 24.7
    }
